<!DOCTYPE html>
<html>
<head>
    <title>Users</title>
</head>
<body>
<div style="text-align: center;">
    <h1>List of users</h1>
    <a href="/logout">logout</a> |
    <a href="/users/new">Add user</a>

<!--    Table list of users -->
    <table style="margin:1rem auto" border="1" cellpadding="5" cellspacing="0">
        <tr>
            <th>Username</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Gender</th>
            <th>Date of birth</th>
            <th>Action</th>
        </tr>
        <% users.forEach(user => { %>
            <tr>
                <td><%= user.username %></td>
                <td><%= user.first_name %></td>
                <td><%= user.last_name %></td>
                <td><%= user.gender %></td>
                <td><%= user.birthdate ? user.birthdate.toISOString().split('T')[0] : '' %></td>
                <td>
                    <a href="/users/<%= user._id %>">Description</a> |
                    <a href="/users/edit/<%= user._id %>">Change</a> |
                    <form action="/users/delete/<%= user._id %>" method="POST" style="display:inline">
                        <button type="submit" onclick="return confirm('Remove the user?')">Remove</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </table>
    <form class="sort-form" method="GET" action="/users" id="sortForm">
        <label>Сортировать по:</label>
        <select name="sort" onchange="document.getElementById('sortForm').submit()">
            <option value="username" <%= sortField === 'username' ? 'selected' : '' %>>Логин</option>
            <option value="first_name" <%= sortField === 'first_name' ? 'selected' : '' %>>Имя</option>
            <option value="birthdate" <%= sortField === 'birthdate' ? 'selected' : '' %>>Дата рождения</option>
        </select>

        <select name="order" onchange="document.getElementById('sortForm').submit()">
            <option value="asc" <%= sortOrder === 'asc' ? 'selected' : '' %>>По возрастанию</option>
            <option value="desc" <%= sortOrder === 'desc' ? 'selected' : '' %>>По убыванию</option>
        </select>
    </form>

<!--    Pagination-->
    <div style="margin-top: 1rem">
        <% for (let i = 1; i <= totalPages; i++) { %>
            <% if (i === currentPage) { %>
                <strong><%= i %></strong>
            <% } else { %>
                <a href="?page=<%= i %>&sort=<%= sortField %>&order=<%= sortOrder %>"><%= i %></a>
            <% } %>
        <% } %>
    </div>
</div>
</body>
</html>
